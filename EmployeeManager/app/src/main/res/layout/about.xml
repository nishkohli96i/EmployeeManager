<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#0894ca">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Code-Geeks"
            android:id="@+id/textView7"
            android:layout_marginTop="76dp"
            android:allowUndo="true"
            android:autoText="false"
            android:fontFamily="@string/abc_font_family_display_4_material"
            android:textSize="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginBottom="73dp"
            android:layout_alignEnd="@+id/textView7" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="37dp"
            android:minWidth="400dp"
            android:minHeight="300dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:text="Code-Geeks  was found in the year 2013 by two childhood friends,Mark Wilson and Andrew Johnson. We at Code-Geeks provide you with the best facilities and material that makes coding  easier to learn and fun.Be a professional Coder today!!! Join Code-Geeks."
                android:id="@+id/textView8"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="22dp"
                android:minLines="4" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
