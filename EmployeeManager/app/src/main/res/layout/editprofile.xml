<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ceeb4343">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Edit Profile"
            android:id="@+id/textView10"
            android:layout_above="@+id/imageButton3"
            android:layout_toEndOf="@+id/imageButton3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/button14"
            android:minWidth="130dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/editText10"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            android:minWidth="70dp"
            android:paddingEnd="10dp"
            android:hint="Name"
            android:layout_alignBottom="@+id/imageButton3"
            android:layout_toEndOf="@+id/imageButton3"
            android:layout_marginBottom="31dp"
            android:maxWidth="70dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText7"
            android:minWidth="120dp"
            android:hint="Address"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="196dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText9"
            android:hint="New Password"
            android:layout_below="@+id/editText24"
            android:layout_alignStart="@+id/editText24" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText10"
            android:hint="Confirm Password"
            android:layout_below="@+id/editText9"
            android:layout_alignStart="@+id/editText9"
            android:layout_marginTop="31dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText24"
            android:hint="Current Password"
            android:layout_below="@+id/editText8"
            android:layout_alignStart="@+id/editText8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText8"
            android:hint="Phone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:layout_marginStart="29dp"
            android:layout_alignBottom="@+id/editText7"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="49dp" />

    </RelativeLayout>
</LinearLayout>
