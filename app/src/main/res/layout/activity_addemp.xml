<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appyblues.nishant.employeemanager.addemp"
    android:background="#9c74ec">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add An Employee"
        android:id="@+id/textView3"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="Name"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignStart="@+id/editText17" />



    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:maxWidth="130dp"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:maxHeight="130dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText17"
        android:maxWidth="100dp"
        android:minWidth="100dp"
        android:hint="Unique Username"
        android:layout_above="@+id/editText3"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp" />


            android:layout_height=
            android:inputType=
            android:ems=10"
            android:id="@+id/editText18"
            android:hint="Address"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_row="0"
            android:layout_column="1" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText20"
            android:hint="Password"
        android:layout_row="7"
            android:layout_column="0"
        android:layout_below="@+id/editText19"
        android:layout_alignStart="@+id/editText19" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText16"
            android:hint="Confirm Password"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_below="@+id/editText20"
            android:layout_alignStart="@+id/editText20" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText19"
            android:hint="Phone Number"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_below="@+id/editText21"
            android:layout_alignStart="@+id/editText21" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:id="@+id/button23"
            android:minWidth="140dp"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_below="@+id/editText16"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText21"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Address" />


</RelativeLayout>
