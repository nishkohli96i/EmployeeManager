<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appyblues.nishant.employeemanager.addproject"
    android:background="#a6a3f2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText22"
        android:minWidth="150dp"
        android:maxWidth="150dp"
        android:hint="Project Name"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText23"
        android:hint="Description"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/editText22"
        android:layout_alignStart="@+id/editText22"
        android:layout_alignEnd="@+id/editText22" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button26"
        android:minWidth="100dp"
        android:layout_below="@+id/button27"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="93dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button27"
        android:minWidth="120dp"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/autoCompleteTextView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Project"
        android:id="@+id/textView2"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView2"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/editText23"
        android:layout_alignEnd="@+id/editText23"
        android:layout_alignStart="@+id/editText23"
        android:hint="Add Employees" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button24"
        android:minWidth="120dp"
        android:layout_alignTop="@+id/button27"
        android:layout_toStartOf="@+id/button26" />

</RelativeLayout>
