<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006699">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:onClick="logout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView9"
            android:minWidth="150dp"
            android:minHeight="50dp"
            android:text="emp name"
            android:maxWidth="175dp"
            android:layout_marginBottom="84dp"
            android:layout_above="@+id/button11"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:id="@+id/button11"
            android:minWidth="170dp"
            android:minHeight="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Projects"
            android:id="@+id/button12"
            android:minWidth="170dp"
            android:layout_below="@+id/button13"
            android:layout_alignStart="@+id/button11"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Projects"
            android:id="@+id/button13"
            android:layout_below="@+id/button11"
            android:layout_marginTop="33dp"
            android:layout_alignStart="@+id/button12"
            android:layout_alignEnd="@+id/button12" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageView7"
            android:minWidth="130dp"
            android:minHeight="130dp"
            android:maxWidth="130dp"
            android:maxHeight="130dp"
            android:layout_above="@+id/button11"
            android:layout_toStartOf="@+id/textView9"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="58dp"
            android:background="#ffffff" />

    </RelativeLayout>
</LinearLayout>
