<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="#4fd9a6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:src="@drawable/ic_menu_camera"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView25"
        android:layout_marginEnd="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView25"
        android:minWidth="150dp"
        android:textSize="25dp"
        android:text="hi"
        android:textAlignment="center"
        android:layout_marginBottom="41dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add  An Employee"
        android:id="@+id/button19"
        android:paddingStart="10dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:minWidth="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire An Employee"
        android:id="@+id/button20"
        android:layout_below="@+id/button19"
        android:layout_alignStart="@+id/button22"
        android:minWidth="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Projects"
        android:id="@+id/button22"
        android:layout_below="@+id/button25"
        android:layout_alignEnd="@+id/button25"
        android:minWidth="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW ALL EMPLOYEES"
        android:id="@+id/button15"
        android:layout_below="@+id/button20"
        android:layout_alignStart="@+id/button19"
        android:minWidth="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Project"
        android:id="@+id/button25"
        android:layout_below="@+id/button15"
        android:layout_alignEnd="@+id/button19"
        android:minWidth="200dp" />

</RelativeLayout>
